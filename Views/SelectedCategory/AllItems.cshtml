@model List<DbOptions.Models.product_entity>
@{
    ViewData["Title"] = "All Items";
}

<div class="container">
    <h1 class="text-center mt-4 mb-5">All Items</h1>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3 h-100">
                    <img src="@item.PictureLink" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="@item.Name">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h6 class="card-title mb-2" style="font-size: 1rem;">@item.Name</h6>
                            <p class="card-text mb-3" style="font-size: 0.8rem;">@item.Description</p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-outline-primary py-1 px-3" asp-controller="SelectedCategory" asp-action="Index" asp-route-categoryId="@item.Id">View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
