@model List<DbOptions.Models.category_entity>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="text-center mt-4 mb-5">Welcome</h1>

    <div class="row justify-content-center mb-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">New User?</h5>
                    <p class="card-text">Create an account to get started</p>
                    <a href="@Url.Action("SignUp", "Account")" class="btn btn-primary btn-lg btn-block">Sign up</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Already have an account?</h5>
                    <p class="card-text">Sign in to your account</p>
                    <a href="@Url.Action("LoginPage", "Login")" class="btn btn-secondary btn-lg btn-block">Log in</a>
                </div>
            </div>
        </div>
    </div>

    <h4 class="text-center mb-4">Let's start shopping</h4>
    <h2 class="text-center mb-4">Categories</h2>

    <div class="row">
        <!-- Категория "See all" -->
        <div class="col-md-4">
            <div class="card mb-3 h-100">
                <img src="https://st.depositphotos.com/1004915/2137/i/450/depositphotos_21374017-stock-photo-toys-background.jpg" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="See All">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h6 class="card-title mb-2" style="font-size: 1rem;">See all</h6>
                        <p class="card-text mb-3" style="font-size: 0.8rem;">View all items</p>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-outline-primary py-1 px-3" href="@Url.Action("AllItems", "SelectedCategory")">View All</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Остальные категории -->
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3 h-100">
                    <img src="@item.picLink" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="@item.Name">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h6 class="card-title mb-2" style="font-size: 1rem;">@item.Name</h6>
                            <p class="card-text mb-3" style="font-size: 0.8rem;">@item.Description</p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-outline-primary py-1 px-3" asp-controller="SelectedCategory" asp-action="Index" asp-route-categoryId="@item.Id">View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 8px rgba(0,0,0,0.15);
        }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
    }
</style>
